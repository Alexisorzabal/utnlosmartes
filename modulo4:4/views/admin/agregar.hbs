<div class="container" style="margin-top: 100px;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post">
                <div class="mb-3 row">
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="Titulo" name="titulo">

                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-sm-10">
                        <textarea type="text" class="form-control" placeholder="Subtitulo" name="subtitulo">
                    </textarea>
                    </div>
                    <div class="mb-3 row">
                        <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo"></textarea>

                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            <h5>{{message}}</h5>
            {{/if}}
        </div>
    </div>
</div>