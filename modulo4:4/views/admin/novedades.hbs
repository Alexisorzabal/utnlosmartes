<div class="container" style="margin-top: 50px;">

    <div class="row">
        <p class="text-end">Hola {{persona}}! <a class="btn btn-danger" href="/admin/login/logout">cerrar sesion <i
                    class="fas fa-sign-out-alt">

                </i></a> </p>
    </div>

    <div class="row">
        <div class="col-5">
            <h3>Listado de novedades </h3>
        </div>
    </div>
    <div class="col-12 text-end">
        <a class="btn btn-success" href="/admin/novedades/agregar"><i class="fa fa-plus" aria-hidden="true"></i>Nuevo</a>

    </div>
</div>

<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr class="table-dark">
                    <th scope="col">#</th>
                    <th scope="col">titulo</th>
                    
                    <th class="text-end">Acciones</th>

                </tr>
            </thead>
            <tbody>
                {{#each novedades}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{titulo}}</td>
                    <td class="text-end">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button class="btn btn-primary me-md-2" type="button">Nuevo</button>
                            <button class="btn btn-primary" href="/admin/novedades/eliminar/{{id}}" type="button">Borrar</button>
                        </div>

                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>

</div>